# ===========================================
# ScriptureChat Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:5173

# MongoDB Database
# Local: mongodb://localhost:27017/scripturechat
# Atlas: mongodb+srv://user:pass@cluster.mongodb.net/scripturechat
MONGODB_URI=mongodb://localhost:27017/scripturechat

# JWT Authentication
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-placeholder-key

# Google OAuth (Optional)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Stripe Payments
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
# Create a product/price in Stripe Dashboard and copy the price ID
STRIPE_PRICE_ID=price_placeholder

# Rate Limiting
# Number of free questions per day for non-premium users
FREE_TIER_DAILY_LIMIT=5
